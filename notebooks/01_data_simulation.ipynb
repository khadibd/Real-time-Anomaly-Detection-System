import pandas as pd
import numpy as np
from datetime import datetime, timedelta
import json
import time

class IoTDataGenerator:
    def __init__(self, num_sensors=10):
        self.num_sensors = num_sensors
        self.sensor_states = {}
        
    def generate_normal_data(self, sensor_id):
        """Generate normal sensor readings with some noise"""
        base_temp = 22 + np.random.uniform(-2, 2)
        base_pressure = 1013 + np.random.uniform(-10, 10)
        base_humidity = 50 + np.random.uniform(-10, 10)
        
        return {
            'sensor_id': f'sensor_{sensor_id:03d}',
            'timestamp': datetime.now().isoformat(),
            'temperature': base_temp + np.random.normal(0, 0.5),
            'pressure': base_pressure + np.random.normal(0, 2),
            'humidity': base_humidity + np.random.normal(0, 3),
            'vibration': np.random.normal(0, 0.1),
            'status': 'normal'
        }
    
    def generate_anomaly(self, sensor_id):
        """Introduce anomalies"""
        data = self.generate_normal_data(sensor_id)
        
        # Random anomaly types
        anomaly_type = np.random.choice(['spike', 'drop', 'noise', 'stuck'])
        
        if anomaly_type == 'spike':
            data['temperature'] += np.random.uniform(15, 30)
        elif anomaly_type == 'drop':
            data['pressure'] -= np.random.uniform(50, 100)
        elif anomaly_type == 'noise':
            data['vibration'] += np.random.uniform(0.5, 2.0)
        elif anomaly_type == 'stuck':
            data['humidity'] = 50.0  # Constant value
            
        data['status'] = 'anomaly'
        data['anomaly_type'] = anomaly_type
        
        return data