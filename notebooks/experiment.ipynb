# QUICK START - MINIMAL ANOMALY DETECTION
import pandas as pd
import numpy as np
from sklearn.ensemble import IsolationForest
from sklearn.preprocessing import StandardScaler
import matplotlib.pyplot as plt

# Generate simple data
np.random.seed(42)
n_samples = 1000

# Normal data
normal_data = {
    'temperature': 20 + np.random.randn(n_samples) * 2,
    'pressure': 1013 + np.random.randn(n_samples) * 10,
    'humidity': 50 + np.random.randn(n_samples) * 5,
    'vibration': np.random.rand(n_samples) * 0.5
}

# Add some anomalies
anomaly_indices = np.random.choice(n_samples, size=50, replace=False)
for idx in anomaly_indices:
    # Create different types of anomalies
    anomaly_type = np.random.choice(['spike', 'drop', 'noise'])
    if anomaly_type == 'spike':
        normal_data['temperature'][idx] += 25
    elif anomaly_type == 'drop':
        normal_data['pressure'][idx] -= 80
    elif anomaly_type == 'noise':
        normal_data['vibration'][idx] += 2.0

# Create DataFrame
df = pd.DataFrame(normal_data)
df['is_anomaly'] = 0
df.loc[anomaly_indices, 'is_anomaly'] = 1

# Prepare features
features = ['temperature', 'pressure', 'humidity', 'vibration']
X = df[features].values

# Scale data
scaler = StandardScaler()
X_scaled = scaler.fit_transform(X)

# Apply Isolation Forest
iso_forest = IsolationForest(contamination=0.05, random_state=42)
predictions = iso_forest.fit_predict(X_scaled)

# Convert predictions: -1=anomaly, 1=normal
df['predicted_anomaly'] = np.where(predictions == -1, 1, 0)

# Calculate accuracy
accuracy = (df['is_anomaly'] == df['predicted_anomaly']).mean()
print(f"Detection accuracy: {accuracy:.2%}")

# Visualize results
fig, axes = plt.subplots(2, 2, figsize=(12, 8))

for idx, feature in enumerate(features):
    ax = axes[idx // 2, idx % 2]
    
    # Plot normal points
    normal_mask = df['predicted_anomaly'] == 0
    ax.scatter(np.where(normal_mask)[0], df[feature][normal_mask], 
              alpha=0.5, s=20, label='Normal', color='blue')
    
    # Plot detected anomalies
    anomaly_mask = df['predicted_anomaly'] == 1
    ax.scatter(np.where(anomaly_mask)[0], df[feature][anomaly_mask], 
              alpha=0.8, s=40, label='Detected Anomaly', color='red', marker='x')
    
    ax.set_title(feature)
    ax.set_xlabel('Sample Index')
    ax.set_ylabel(feature)
    ax.legend()
    ax.grid(True, alpha=0.3)

plt.suptitle(f'Anomaly Detection Results (Accuracy: {accuracy:.2%})', fontsize=14)
plt.tight_layout()
plt.show()

print("\nDetection Summary:")
print(f"Total anomalies in data: {df['is_anomaly'].sum()}")
print(f"Detected anomalies: {df['predicted_anomaly'].sum()}")